<% layout("layouts/boilerplate") %>
<body>
    <br>
    <h3>Add New Listing</h3>
    <br>
    <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="row justify-content-center shadow-lg mb-5">
        <div class="col-8">
        <div class="mb-3 mt-3 ">
            <label for="title" class="form-label ">Title </label>
            <input name="listing[title]" type="text" id="title" placeholder="Enter title" class="form-control" required>
            <div class="valid-feedback">Title looks cool!</div>
            <div class="invalid-feedback">Title is must!</div>
        </div>
        
        <div class="mb-3">
            <label for="description" class="form-label">Description  </label>
            <textarea name="listing[description]" type="text"  id="description" placeholder="Enter your description" class="form-control" required></textarea>
            <div class="valid-feedback">Nice Description </div>
            <div class="invalid-feedback">Enter a short description</div>
        </div>

        <div class="mb-3">
            <label for="image" class="form-label">Image URL</label>
            <input name="listing[image]" type="file"  id="image" class="form-control" required>
            
        </div> 

        <div class="row">
        <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input name="listing[price]"  id="price" placeholder="1200" class="form-control" required>
            <div class="invalid-feedback">Price should be valid</div>
        </div>
        
        <div class="mb-3 col-md-8" >
            <label for="location" class="form-label">Location</label>
            <input name="listing[location]" type="text"  id="location" placeholder="Jaipur, Rajasthan" class="form-control" required>
            <div class="valid-feedback">Great!</div>
            <div class="invalid-feedback">Enter a valid location</div>
        </div>
        </div>
        
        <div class="mb-3">
            <label for="country" class="form-label">Country</label>
            <input name="listing[country]" type="text" id="country" placeholder="India" class="form-control" required>
            <div class="valid-feedback">Cool!</div>
            <div class="invalid-feedback">Country name is must</div>
        </div>

        <div class="my-3 text-center">
            <button class="btn btn-dark rounded-pill py-2 w-25">ADD</button>
        </div>
    </form>
    </div>
    </div>
    <br>
</body>
