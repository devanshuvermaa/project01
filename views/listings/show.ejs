<% layout("layouts/boilerplate") %>

<div class="container pb-5">
    <div class="row text-center">
        <div class="col-12 col-md-8 offset-md-2">
            <h1 class="my-4 font-weight-bold"><%= foundlisting.title %></h1>
        </div>
    </div>

    <div class="row">
        <div class="col-12 col-md-8 offset-md-2">
            <div class="show-card border-0">
                <img class="show-img rounded-4 shadow-sm" src="<%= foundlisting.image.url %>" alt="LOADING..." style="width: 100%; height: auto; object-fit: cover;">
            </div>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-12 col-md-8 offset-md-2">
            <div class="listing-details">
                <p class="text-muted"><i>Owned by <b><%= foundlisting.owner.username %></b></i></p>
                <p class="fs-4 lh-sm"><%= foundlisting.description %></p>
                <p class="fs-5 text-dark">&#x20b9; <%= foundlisting.price.toLocaleString("en-IN") %></p>
                <p class="mb-1"><b><i class="fa-solid fa-location-dot me-2"></i><%= foundlisting.location %></b></p>
                <p><b><i class="fa-solid fa-earth-americas me-2"></i><%= foundlisting.country %></b></p>
            </div>
        </div>
    </div>

    <% if(currUser && currUser._id.equals(foundlisting.owner._id)){ %>
    <div class="row mt-4">
        <div class="col-12 col-md-8 offset-md-2 d-flex flex-column flex-sm-row gap-2">
            <a class="btn btn-dark py-2 flex-grow-1" href="/listings/<%= foundlisting._id %>/edit">Edit Listing</a>
            <form method="POST" action="/listings/<%= foundlisting._id %>?_method=DELETE" class="flex-grow-1">
                <button class="btn btn-outline-danger py-2 w-100">Delete Listing</button>
            </form>
        </div>
    </div>
    <% } %>

    <hr class="my-5">

    <% if(currUser){ %>
    <div class="row">
        <div class="col-12 col-md-8 offset-md-2">
            <div class="card p-4 shadow-sm border-0 bg-light">
                <h4 class="text-center mb-4">Leave a Review</h4>
                <form method="post" action="/listings/<%= foundlisting._id %>/reviews" novalidate class="needs-validation">
                    <div class="mb-3">
                        <label for="rating" class="form-label">Rating</label>
                        <fieldset class="starability-slot mt-1">
                            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                            <label for="first-rate1" title="Terrible">1 star</label>
                            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                            <label for="first-rate2" title="Not good">2 stars</label>
                            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                            <label for="first-rate3" title="Average">3 stars</label>
                            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                            <label for="first-rate4" title="Very good">4 stars</label>
                            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                            <label for="first-rate5" title="Amazing">5 stars</label>
                        </fieldset>
                    </div>
                    <div class="mb-3">
                        <label for="comments" class="form-label">Share your experience</label>
                        <textarea name="review[comment]" id="comments" rows="4" class="form-control" placeholder="Write something..." required></textarea>
                        <div class="invalid-feedback">Comment is required!</div>
                    </div>
                    <button class="btn btn-dark w-100 py-2">Submit Review</button>
                </form>
            </div>
        </div>
    </div>
    <% } %>

    <% if(foundlisting.reviews.length > 0) { %>
    <div class="row mt-5">
        <div class="col-12 col-md-8 offset-md-2">
            <h4 class="mb-4">All Reviews</h4>
            <div class="row g-3">
                <% for(let review of foundlisting.reviews){ %>
                <div class="col-12 col-sm-6">
                    <div class="card h-100 p-3 shadow-sm border-0 border-start border-dark border-4">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <h6 class="mb-0 fw-bold">@<%= review.author.username %></h6>
                            <% if(currUser && currUser._id.equals(review.author._id) ){ %>
                            <form method="post" action="/listings/<%= foundlisting._id %>/reviews/<%= review._id %>?_method=DELETE">
                                <button class="btn btn-link text-danger btn-sm p-0"><i class="fa-solid fa-trash-can"></i></button>
                            </form>
                            <% } %>
                        </div>
                        <p class="starability-result mb-2" data-rating="<%= review.rating %>"></p>
                        <p class="card-text small text-muted">"<%= review.comment %>"</p>
                    </div>
                </div>
                <% } %>
            </div>
        </div>
    </div>
    <% } %>

    <div class="row mt-5">
        <div class="col-12 col-md-8 offset-md-2">
            <h4 class="mb-3">Where you'll be</h4>
            <div id="map" class="rounded-4 shadow-sm" style="height: 350px;"></div>
        </div>
    </div>
</div>

<script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
<script src="/js/map.js"></script>
<script>
    const listingLat = <%- JSON.stringify(foundlisting.coordinates[0]) %>;
    const listingLng = <%- JSON.stringify(foundlisting.coordinates[1]) %>;
    window.addMarker(listingLat, listingLng);
</script>