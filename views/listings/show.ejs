<% layout("layouts/boilerplate") %>

    <div class="row text-center mb-1">
        <h1 class="my-3">
            <%= foundlisting.title %>
                <!-- <p>lat=<%=foundlisting.coordinates[0]%></p>
            <p>lat=<%=foundlisting.coordinates[1]%></p> -->
        </h1>
        <div class="col-12 mx-auto">
            <img class="show-img my-3 " src="<%= foundlisting.image.url %> " alt="LOADING...">
        </div>
        <div class="col-6 mx-auto">
            <div class=" text-start ">
                <p><i>Owned by <b>
                            <%= foundlisting.owner.username %>
                        </b></i></p>
                <p class="fs-4">
                    <%= foundlisting.description %>
                </p>
                <p> &#x20b9; <%= foundlisting.price.toLocaleString("en-IN") %>
                </p>
                <p>
                    <b>
                        <%= foundlisting.location %>
                    </b>
                </p>
                <p>
                    <b>
                        <%= foundlisting.country %>
                    </b>
                </p>
            </div>
        </div>

    </div>
    <% if(currUser && currUser._id.equals(foundlisting.owner._id)){ %>
        <div class="row text-center mb-5 ">
            <div class="d-flex justify-content-center col ">
                <a class="btn btn-dark my-1 show-editbtn mx-2" href="/listings/<%= foundlisting._id %>/edit">Edit</a>
                <form method="POST" action="/listings/<%= foundlisting._id %>?_method=DELETE">
                    <button class="btn btn-dark my-1 show-deletebtn mx-2">Delete</button>
                </form>
            </div>

        </div>
        <% } %>
            <% if(currUser){ %>
                <hr>
                <div class="row shadow mt-4 mb-4">
                    <div class="col-6 mx-auto">
                        <h4 class="text-center mb-2 mt-4">Leave a Review</h4>
                        <form method="post" action="/listings/<%= foundlisting._id %>/reviews" novalidate
                            class="needs-validation">
                            <div class=" mt-4">
                                <label for="rating" class="from-label">Rating</label>
                                <fieldset class="starability-slot mt-2">
                                    <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]"
                                        value="1" checked aria-label="No rating." />
                                    <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                                    <label for="first-rate1" title="Terrible">1 star</label>
                                    <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                                    <label for="first-rate2" title="Not good">2 stars</label>
                                    <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                                    <label for="first-rate3" title="Average">3 stars</label>
                                    <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                                    <label for="first-rate4" title="Very good">4 stars</label>
                                    <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                                    <label for="first-rate5" title="Amazing">5 stars</label>
                                </fieldset>
                            </div>
                            <div class="mb-2 ">
                                <label for="comments" class="from-label">Comment!</label>
                                <textarea name="review[comment]" id="comments" class="form-control" required></textarea>
                                <div class="valid-feedback">Sounds Great!</div>
                                <div class="invalid-feedback">Comment is required!</div>

                            </div>
                            <button class=" btn btn-outline-dark mb-4 mt-2">Submit</button>
                        </form>
                    </div>
                </div>
                <% } %>
                    <% if(foundlisting.reviews.length>0) { %>
                        <div class="row my-5">
                            <h4 class="my-3">All Reviews</h4>
                            <% for(let review of foundlisting.reviews){ %>
                                <div class="col-4 ">
                                    <div class="review-div my-1 ps-3 py-3">
                                        <div class="d-flex justify-content-between ">
                                            <h4>
                                                <%=review.author.username%>
                                            </h4>
                                            <% if(currUser && currUser._id.equals(review.author._id) ){ %>
                                                <form method="post"
                                                    action="/listings/<%= foundlisting._id %>/reviews/<%= review._id %>?_method=DELETE">
                                                    <button
                                                        class="btn btn-danger btn-sm rounded-pill mx-2 ">Delete</button>
                                                </form>
                                                <% } %>
                                        </div>
                                        <b>
                                            <%= review.rating %> <i class="fa-solid fa-star"></i>
                                        </b>
                                        <!-- <p class="starability-result" data-rating= <%= review.rating %> >
                                            Rated: 3 stars
                                        </p> -->
                                        <br>
                                        <i>
                                            <%= review.comment %>
                                        </i>
                                    </div>
                                </div>
                                <% } %>
                        </div>
                        <%}%>
                            <div class="row mt-2 mb-3">
                                <div class="col-8 offset-2 ">
                                    <h4>Where you'll be</h4>
                                    <div id="map" style="height: 400px;"></div>
                                </div>
                            </div>
                            <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
                            <script src="/js/map.js"></script>
                            <script>
                                const listingLat = <%- JSON.stringify(foundlisting.coordinates[0]) %>;
                                const listingLng = <%- JSON.stringify(foundlisting.coordinates[1]) %>;
                                window.addMarker(listingLat, listingLng);
                            </script>